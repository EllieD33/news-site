{
    "GET /api": {
        "description": "serves up a json representation of all the available endpoints of the api"
    },
    "GET /api/topics": {
        "description": "serves an array of all topics",
        "queries": [],
        "exampleResponse": {
            "topics": [{ "slug": "football", "description": "Footie!" }]
        }
    },
    "GET /api/articles": {
        "description": "serves an array of all articles",
        "queries": ["author", "topic", "sort_by", "order"],
        "exampleResponse": {
            "articles": [
                {
                    "title": "Seafood substitutions are increasing",
                    "topic": "cooking",
                    "author": "weegembump",
                    "created_at": "2018-05-30T15:59:13.341Z",
                    "article_img_URL": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
                    "votes": 0,
                    "comment_count": 6,
                    "article_id": 1
                }
            ]
        }
    },
    "GET /api/articles/:article_id": {
        "description": "serves an object containing specified article",
        "queries": [],
        "exampleResponse": {
            "article": {
                "title": "Seafood substitutions are increasing",
                "topic": "cooking",
                "author": "weegembump",
                "body": "Text from the article..",
                "created_at": "2018-05-30T15:59:13.341Z",
                "article_img_URL": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
                "votes": 0,
                "article_id": 1
            }
        }
    },
    "PATCH /api/articles/:article_id": {
        "description": "updates votes on an article by given amount and serves an object containing updated article",
        "exampleRequest": {
            "inc_votes": 2
        },
        "exampleResponse": {
            "article": {
                "title": "Seafood substitutions are increasing",
                "topic": "cooking",
                "author": "weegembump",
                "body": "Text from the article..",
                "created_at": "2018-05-30T15:59:13.341Z",
                "article_img_URL": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
                "votes": 2,
                "comment_count": 3,
                "article_id": 1
            }
        }
    },
    "GET /api/articles/:article_id/comments": {
        "description": "serves an object containing comments from specified article",
        "queries": [],
        "exampleResponse": {
            "article": {
                "comment_id": 1,
                "votes": 6,
                "created_at": "2018-05-30T15:59:13.341Z",
                "author": "weegembump",
                "body": "Text from the comment..",
                "article_id": 1
            }
        }
    },
    "POST /api/articles/:article_id/comments": {
        "description": "receives an object containing username and comment to be added specified article. Responds with posted comment object",
        "exampleRequest": {
            "username": "existing user",
            "body": "Text of the comment"
        },
        "exampleResponse": {
            "comment": {
                "comment_id": 28,
                "created_at": "2024-05-30T15:59:13.341Z",
                "author": "username",
                "body": "Text from the comment..",
                "article_id": 8
            }
        }
    },
    "DELETE /api/comments/:comment_id": {
        "description": "deletes comment by provided id"
    },
    "GET /api/users": {
        "description": "serves an array of all users",
        "queries": [],
        "exampleResponse": {
            "users": [
                {
                    "username": "butter_bridge",
                    "name": "jonny",
                    "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
                }
            ]
        }
    }
}
